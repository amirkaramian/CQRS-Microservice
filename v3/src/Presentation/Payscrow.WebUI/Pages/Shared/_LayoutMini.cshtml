    <link rel="stylesheet" href="~/themes/payscrow/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/themes/payscrow/css/responsive.css">
    <link asp-append-version="true" href="~/themes/payscrow/css/custom.css" rel="stylesheet" />
    @await RenderSectionAsync("page_styles", false)

    <title>PayScrow - @ViewData["Title"]</title>
</head>
<body>
 
    <div class="container pt-3">
              <a class="navbar-brand logo" asp-page="/Index">
                    <img src="~/themes/payscrow/img/logo.png" />
                </a>
    </div>

    @RenderBody()


    <footer>
        <div class="container">
            <div class="row links">
                <div class="col-md-4">
                    <img src="~/themes/payscrow/img/logo.png" />
                    <p>
                        We are an independent escrow service provider working with CBN licensed Deposit Money Banks and payment processors to ensure both buyers and sellers are happy with their transactions.
                    </p>
                    <a href="#">&copy; Payscrow</a>
                </div>
                <div class="col-md-4">
                    <h6>USEFUL LINKS</h6>
                    <ul>
                        <li><a href="#">How it Works</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">News</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Login</a></li>
                        <li><a href="#">FAQS</a></li>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">Get Started</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>CONTACT US</h6>
                    <p>
                        Enquiries? Suggestions? We love to hear from you
                    </p>
                    <a class="btn border" href="#">
                        Contact
                    </a>
                    <a class="btn dark" href="#">
                        Get Started
                    </a>
                    <ul>
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    @* div for $.blockUI *@
    <div style="display:none">
        <div id="custom-loader" class="loader-primary">
            <div class="loader-demo">
                <div class="loader-inner ball-scale-ripple-multiple mb">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
                <div class="text-center mt"><span class="loading-text">Please wait...</span></div>
            </div>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/themes/payscrow/js/jquery-3.2.1.min.js"></script>
    <script src="~/themes/payscrow/js/popper.min.js"></script>
    <script src="~/themes/payscrow/js/bootstrap.min.js"></script>
    <script src="~/themes/payscrow/js/lightslider.js"></script>
    <script src="~/themes/payscrow/js/aos.js"></script>
    <script src="~/themes/payscrow/js/script.js" asp-append-version="true"></script>

    <script asp-append-version="true" src="~/js/knockout.min.js"></script>
    <script asp-append-version="true" src="~/js/public-app.min.js"></script>

