<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/themes/payscrow/css/bootstrap.min.css">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/themes/payscrow/css/fontawesome.css">
    <link rel="stylesheet" href="~/themes/payscrow/css/brands.css">
    <link rel="stylesheet" href="~/themes/payscrow/css/solid.css">
    <!-- Plugins -->
    <link rel="stylesheet" href="~/themes/payscrow/css/lightslider.css" />
    <link rel="stylesheet" href="~/themes/payscrow/css/animate.min.css" />
    <link rel="stylesheet" href="~/themes/payscrow/css/aos.css" />
    <link rel="stylesheet" href="~/themes/payscrow//vendors/sweetalert2/dist/sweetalert2.min.css" />
